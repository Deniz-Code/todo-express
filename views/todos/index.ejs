<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express to-do</title>
  </head>
  <body>
    <h1>Todos</h1>
    <a href="/">Go back</a>
    <ul>
      <% todos.forEach(todo => { %>
      <li><a href="/todos/<%= todo._id %>"><%= todo.text %></a> - <%= todo.done ? "done": "not done" %></li>
      <% }) %>
    </ul>
    <a href="/todos/new">Add a to-do</a>
  </body>
</html>
